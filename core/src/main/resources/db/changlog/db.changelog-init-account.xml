<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="20230701-1722" author="lunici">
        <createTable tableName="tbl_account" schemaName="public">
            <column name="iban" type="VARCHAR(34)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="bic" type="VARCHAR(11)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="INT"/>
            <column name="country" type="INT"/>
            <column name="status" type="TINYINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>