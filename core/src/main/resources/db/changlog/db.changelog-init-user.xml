<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="20230627-1944" author="lunici">
        <createTable tableName="tbl_user" schemaName="public">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="givenname" type="VARCHAR(255)"/>
            <column name="surname" type="VARCHAR(255)"/>
            <column name="second_surname" type="VARCHAR(255)"/>
            <column name="gender" type="SMALLINT" defaultValueNumeric="0"/>
            <column name="birthday" type="DATE"/>
            <column name="identify_document_type" type="TINYINT"/>
            <column name="identify_document_number" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="create_time" type="DATETIME"/>
            <column name="role" type="TINYINT"/>
            <column name="iban" type="VARCHAR(34)">
                <constraints unique="true"/>
            </column>
            <column name="bic" type="VARCHAR(11)">
                <constraints unique="true"/>
            </column>
            <column name="status" type="TINYINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="profile_image_url" type="VARCHAR(255)"/>

        </createTable>
    </changeSet>

</databaseChangeLog>